<web-app>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ru.job4j.fan.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ru.job4j.fan.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <load-on-startup>0</load-on-startup>
    </servlet-mapping>

    <servlet>
        <servlet-name>StartPage</servlet-name>
        <servlet-class>ru.job4j.fan.StartPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartPage</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUserContrl</servlet-name>
        <servlet-class>ru.job4j.fan.AddUserContrl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserContrl</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUserContrl</servlet-name>
        <servlet-class>ru.job4j.fan.EditUserContrl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserContrl</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserContrl</servlet-name>
        <servlet-class>ru.job4j.fan.DeleteUserContrl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserContrl</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

</web-app>