<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:car_store;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/carstore/AutoModel.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/Body.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/Car.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/Drive.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/Engine.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/MakeCar.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/Transmission.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/User.hbm.xml"/>
    </session-factory>
</hibernate-configuration>